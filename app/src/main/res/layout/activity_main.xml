<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <EditText
        android:id="@+id/main_edit_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="300dp"
        android:hint="请输入手机号"
        />
    <EditText
        android:id="@+id/main_edit_pass"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_edit_name"
        android:layout_marginTop="10dp"
        android:hint="请输入密码"
        />
    <Button
        android:id="@+id/main_button_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="登录"
        android:enabled="false"
        app:layout_constraintLeft_toLeftOf="@id/main_edit_pass"
        app:layout_constraintTop_toBottomOf="@id/main_box_rem"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/button_enable"
        />
    <CheckBox
        android:id="@+id/main_box_rem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/main_edit_pass"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/main_edit_pass"
        android:layout_marginTop="10dp"
        android:text="记住密码"
        />
    <CheckBox
        android:id="@+id/main_box_self"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@id/main_edit_pass"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/main_edit_pass"
        android:layout_marginTop="10dp"
        android:text="自动登录"
        android:layout_marginRight="20dp"
        />
    <Button
        android:id="@+id/main_button_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册"
        app:layout_constraintRight_toRightOf="@id/main_edit_pass"
        app:layout_constraintTop_toBottomOf="@id/main_box_self"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_enable"
        />
    <Button
        android:id="@+id/main_button_san"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第三方登录"
        app:layout_constraintLeft_toLeftOf="@id/main_edit_pass"
        app:layout_constraintRight_toRightOf="@id/main_edit_pass"
        app:layout_constraintTop_toTopOf="@id/main_edit_pass"
        android:layout_marginTop="200dp"
        />
</android.support.constraint.ConstraintLayout>